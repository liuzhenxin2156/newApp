<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_space_48"
    android:paddingLeft="@dimen/view_space_20"
    android:paddingTop="@dimen/view_space_10"
    android:paddingBottom="@dimen/view_space_10"
    android:foreground="?attr/selectableItemBackground"
    android:paddingRight="@dimen/view_space_20"
    android:orientation="horizontal"
    >
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/im_icon"
        android:layout_width="@dimen/view_height_44"
        android:layout_height="@dimen/view_height_44"
        android:padding="@dimen/view_space_8"
        />
    <TextView
        android:id="@+id/tv_scanname"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        />
</LinearLayout>
