<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toolbar_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_48">

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/view_space_4"
            android:background="?attr/selectableItemBackground"
            android:padding="@dimen/view_space_10"
            android:src="@drawable/back_iv" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="保险投保信息采集"
            android:textColor="@color/color_3"
            android:textSize="@dimen/text_size_16" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_space_18"
                android:layout_marginTop="@dimen/view_space_10"
                android:layout_marginRight="@dimen/view_space_18"
                android:text="猪场名称*"
                android:textColor="@color/color_6"
                android:textSize="@dimen/text_size_14" />

            <EditText
                android:id="@+id/pig_name_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height_44"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/view_space_18"
                android:layout_marginTop="@dimen/view_space_10"
                android:layout_marginRight="@dimen/view_space_18"
                android:background="@drawable/edittext_bg"
                android:gravity="left|center"
                android:maxLines="1"
                android:paddingLeft="@dimen/view_space_8"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/color_6"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_space_18"
                android:layout_marginTop="@dimen/view_space_10"
                android:layout_marginRight="@dimen/view_space_18"
                android:text="营业执照号*"
                android:textColor="@color/color_6"
                android:textSize="@dimen/text_size_14" />

            <EditText
                android:id="@+id/business_license_no_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height_44"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/view_space_18"
                android:layout_marginTop="@dimen/view_space_10"
                android:layout_marginRight="@dimen/view_space_18"
                android:background="@drawable/edittext_bg"
                android:focusable="true"
                android:gravity="left|center"
                android:maxLines="1"
                android:paddingLeft="@dimen/view_space_8"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/color_6"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_space_18"
                android:layout_marginTop="@dimen/view_space_10"
                android:layout_marginRight="@dimen/view_space_18"
                android:text="法人名字*"
                android:textColor="@color/color_6"
                android:textSize="@dimen/text_size_14" />

            <EditText
                android:id="@+id/corporate_name_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height_44"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/view_space_18"
                android:layout_marginTop="@dimen/view_space_10"
                android:layout_marginRight="@dimen/view_space_18"
                android:background="@drawable/edittext_bg"
                android:gravity="left|center"
                android:maxLines="1"
                android:paddingLeft="@dimen/view_space_8"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/color_6"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_space_18"
                android:layout_marginTop="@dimen/view_space_10"
                android:layout_marginRight="@dimen/view_space_18"
                android:text="身份证号*"
                android:textColor="@color/color_6"
                android:textSize="@dimen/text_size_14" />

            <EditText
                android:id="@+id/id_card_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height_44"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/view_space_18"
                android:layout_marginTop="@dimen/view_space_10"
                android:layout_marginRight="@dimen/view_space_18"
                android:background="@drawable/edittext_bg"
                android:gravity="left|center"
                android:maxLines="1"
                android:paddingLeft="@dimen/view_space_8"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/color_6"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_space_18"
                android:layout_marginTop="@dimen/view_space_10"
                android:layout_marginRight="@dimen/view_space_18"
                android:text="电话*"
                android:textColor="@color/color_6"
                android:textSize="@dimen/text_size_14" />

            <EditText
                android:id="@+id/phone_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height_44"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/view_space_18"
                android:layout_marginTop="@dimen/view_space_10"
                android:layout_marginRight="@dimen/view_space_18"
                android:background="@drawable/edittext_bg"
                android:gravity="left|center"
                android:maxLines="1"
                android:inputType="number"
                android:paddingLeft="@dimen/view_space_8"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/color_6"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_space_18"
                android:layout_marginTop="@dimen/view_space_10"
                android:layout_marginRight="@dimen/view_space_18"
                android:text="猪场地址*"
                android:textColor="@color/color_6"
                android:textSize="@dimen/text_size_14" />

            <EditText
                android:id="@+id/pig_address_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height_44"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/view_space_18"
                android:layout_marginTop="@dimen/view_space_10"
                android:layout_marginRight="@dimen/view_space_18"
                android:background="@drawable/edittext_bg"
                android:gravity="left|center"
                android:maxLines="1"
                android:paddingLeft="@dimen/view_space_8"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/color_6"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_space_18"
            android:layout_marginTop="@dimen/view_space_10"
            android:layout_marginRight="@dimen/view_space_18"
            android:text="投保猪品种*"
            android:textColor="@color/color_6"
            android:textSize="@dimen/text_size_14" />
        <LinearLayout
            android:id="@+id/immune_rb"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/breeding_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:checked="true"
                android:textSize="14dp"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:text="能繁" />
            <RadioButton
                android:id="@+id/fatten_rb"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:text="育肥" />

        </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/view_space_10"
                android:id="@+id/lay_age_in_days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/give_eartag_age_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="40dp"
                    android:textColor="@color/color_6"
                    android:textSize="@dimen/text_size_14"
                    android:text="日龄：" />

                <EditText
                    android:id="@+id/give_eartag_animal_day"
                    style="@style/containerView"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:inputType="number"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:textSize="15dp" />

                <TextView
                    android:textColor="@color/color_6"
                    android:textSize="@dimen/text_size_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="日" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/give_eartag_select"
            style="@style/containerView"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/view_height_44"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/view_space_10"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/view_space_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="耳标" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/give_eartag_select_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="right"
                android:singleLine="true" />

            <TextView
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/common_arror_right" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_space_18"
            android:layout_marginTop="@dimen/view_space_12"
            android:layout_marginRight="@dimen/view_space_18"
            android:background="@drawable/transport_btn_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/xml_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/view_space_8"
                    android:layout_marginTop="@dimen/view_space_12"
                    android:layout_marginRight="@dimen/view_space_22"
                    android:layout_marginBottom="@dimen/view_space_12"
                    android:text="附件信息"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size_16" />
            </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tips_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/id_card_iv"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/view_space_12"
                    android:layout_marginTop="@dimen/view_space_4"
                    android:text="上传身份信息 *"
                    android:textColor="@color/color_3"
                    android:textSize="@dimen/text_size_16"></TextView>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/id_card_iv"
                    android:layout_marginTop="@dimen/view_space_12"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height_160"
                    android:layout_marginLeft="@dimen/view_space_18"
                    android:layout_marginRight="@dimen/view_space_18"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_default"></androidx.appcompat.widget.AppCompatImageView>

                <Button
                    android:id="@+id/id_card_iv_bt"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height_40"
                    android:layout_below="@+id/tips_tv"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/view_space_28"
                    android:layout_marginTop="@dimen/view_space_8"
                    android:layout_marginRight="@dimen/view_space_28"
                    android:background="@drawable/commit_bg"
                    android:enabled="true"
                    android:text="上传身份证正面"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size_16" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/other_id_card_iv"
                    android:layout_marginTop="@dimen/view_space_18"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height_160"
                    android:layout_marginLeft="@dimen/view_space_18"
                    android:layout_marginRight="@dimen/view_space_18"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_default"></androidx.appcompat.widget.AppCompatImageView>

                <Button
                    android:id="@+id/other_id_card_iv_bt"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height_40"
                    android:layout_below="@+id/tips_tv"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/view_space_28"
                    android:layout_marginTop="@dimen/view_space_8"
                    android:layout_marginRight="@dimen/view_space_28"
                    android:background="@drawable/commit_bg"
                    android:enabled="true"
                    android:text="上传身份证反面"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size_16" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_size_0.5"
                    android:layout_marginLeft="@dimen/view_space_12"
                    android:layout_marginTop="@dimen/view_space_18"
                    android:layout_marginRight="@dimen/view_space_12"
                    android:background="@color/diver_bg" />


            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/view_space_18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/id_card_iv"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/view_space_12"
                    android:layout_marginTop="@dimen/view_space_4"
                    android:text="银行卡照片*"
                    android:textColor="@color/color_3"
                    android:textSize="@dimen/text_size_16"></TextView>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/id_bank_card_iv"
                    android:layout_marginTop="@dimen/view_space_12"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height_160"
                    android:layout_marginLeft="@dimen/view_space_18"
                    android:layout_marginRight="@dimen/view_space_18"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_default"></androidx.appcompat.widget.AppCompatImageView>

                <Button
                    android:id="@+id/id_bank_card_bt"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height_40"
                    android:layout_below="@+id/tips_tv"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/view_space_28"
                    android:layout_marginTop="@dimen/view_space_8"
                    android:layout_marginRight="@dimen/view_space_28"
                    android:background="@drawable/commit_bg"
                    android:enabled="true"
                    android:text="上传银行卡"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size_16" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_size_0.5"
                    android:layout_marginLeft="@dimen/view_space_12"
                    android:layout_marginTop="@dimen/view_space_12"
                    android:layout_marginRight="@dimen/view_space_12"
                    android:background="@color/diver_bg" />


            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/view_space_18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/id_card_iv"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/view_space_12"
                    android:text="上传验标资料*"
                    android:textColor="@color/color_3"
                    android:textSize="@dimen/text_size_16"></TextView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview"
                    android:layout_marginLeft="@dimen/view_space_12"
                    android:layout_marginTop="@dimen/view_space_8"
                    android:layout_marginBottom="@dimen/view_space_8"
                    android:layout_marginRight="@dimen/view_space_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>


                <TextView
                    android:layout_marginTop="@dimen/view_space_8"
                    android:layout_marginLeft="@dimen/view_space_12"
                    android:textColor="@color/colorRed"
                    android:textSize="@dimen/text_size_14"
                    android:text="@string/tips_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                </TextView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_size_0.5"
                    android:layout_marginLeft="@dimen/view_space_12"
                    android:layout_marginTop="@dimen/view_space_12"
                    android:layout_marginRight="@dimen/view_space_12"
                    android:background="@color/diver_bg" />


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_space_30">

            </View>


        </LinearLayout>
        <Button
            android:id="@+id/commit_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_height_44"
            android:layout_marginBottom="@dimen/view_space_12"
            android:layout_marginLeft="@dimen/view_space_20"
            android:layout_marginRight="@dimen/view_space_20"
            android:layout_marginTop="@dimen/view_space_24"
            android:background="@drawable/commit_bg"
            android:text="确认信息"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_space_40">

        </View>

    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>