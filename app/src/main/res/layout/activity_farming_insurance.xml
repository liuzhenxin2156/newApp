<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#f7f7f7"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toolbar_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_48">

        <TextView
            android:id="@+id/back_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/view_space_12"
            android:background="?attr/selectableItemBackground"
            android:text="主页"
            android:textColor="@color/color_6"
            android:textSize="@dimen/text_size_14"

            />

        <ImageView
            android:id="@+id/arrow_kill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/back_tv"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/back_level_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/arrow_kill"
            android:background="?attr/selectableItemBackground"
            android:text="保险服务"
            android:textColor="@color/color_6"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="养殖险"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_16" />
    </RelativeLayout>

    <View
        android:id="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_size_0.5"
        android:background="@color/diver_bg" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_space_8"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="@dimen/view_space_20"
                    android:layout_height="@dimen/view_space_20"
                    android:layout_marginLeft="@dimen/view_space_18"
                    android:src="@drawable/toubao_ic"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center_vertical"
                    android:text="我要投保"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size_16" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_size_0.5"
                android:layout_marginLeft="@dimen/view_space_18"
                android:layout_marginTop="@dimen/view_space_8"
                android:layout_marginRight="@dimen/view_space_18"
                android:background="@color/diver_bg" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_space_18"
                android:layout_marginTop="@dimen/view_space_12">

                <TextView
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@color/color_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中路保险">
                </TextView>
                <LinearLayout
                    android:id="@+id/sun_insurance_ll"
                    android:layout_marginTop="@dimen/view_space_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/baoxian_ic"
                        android:scaleType="fitXY"
                        android:src="@drawable/baoxian_ic"
                        android:layout_width="@dimen/view_space_100"
                        android:layout_height="@dimen/view_space_100">
                    </ImageView>

                    <LinearLayout
                        android:layout_marginBottom="@dimen/view_space_6"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_marginRight="@dimen/view_space_18"
                            android:layout_marginLeft="@dimen/view_space_8"
                            android:layout_marginTop="@dimen/view_space_8"
                            android:layout_toRightOf="@+id/baoxian_ic"
                            android:textSize="@dimen/text_size_16"
                            android:textColor="@color/color_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="中路短途运输险">
                        </TextView>
                        <TextView
                            android:layout_marginRight="@dimen/view_space_18"
                            android:layout_marginLeft="@dimen/view_space_8"
                            android:layout_marginTop="@dimen/dp_4"
                            android:layout_toRightOf="@+id/baoxian_ic"
                            android:textSize="@dimen/text_size_14"
                            android:textColor="@color/color_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="生猪类型：生猪/仔猪">
                        </TextView>
                        <TextView
                            android:layout_marginRight="@dimen/view_space_18"
                            android:layout_marginLeft="@dimen/view_space_8"
                            android:layout_marginTop="@dimen/dp_4"
                            android:layout_toRightOf="@+id/baoxian_ic"
                            android:textSize="@dimen/text_size_14"
                            android:textColor="@color/color_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="保障期限：同检疫证有效期">
                        </TextView>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_weight="1"
                        android:visibility="invisible"
                        android:layout_marginBottom="@dimen/view_space_6"
                        android:layout_gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/view_space_30"
                        android:text="立即投保"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_14" />
                    <Button
                        android:layout_weight="1"
                        android:visibility="invisible"

                        android:layout_marginBottom="@dimen/view_space_6"
                        
                        android:layout_gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/view_space_30"
                        android:background="@drawable/insured_btn_bg"
                        android:text="立即投保"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_14" />

                    <Button
                        android:layout_weight="1"
                        android:id="@+id/sun_insurance_btn"
                        android:layout_marginBottom="@dimen/view_space_6"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_gravity="right"
                        android:layout_marginRight="@dimen/view_space_8"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/view_space_30"
                        android:background="@drawable/insured_btn_bg"
                        android:text="立即投保"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_14" />
                    <Button
                        android:layout_weight="1"
                        android:id="@+id/detalis_btn"
                        android:layout_marginBottom="@dimen/view_space_6"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_marginRight="@dimen/view_space_18"
                        android:layout_height="@dimen/view_space_30"
                        android:background="@drawable/details_bg"
                        android:text="详情"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_14" />
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_size_0.5"
                android:layout_marginLeft="@dimen/view_space_18"
                android:layout_marginTop="@dimen/view_space_12"
                android:layout_marginRight="@dimen/view_space_18"
                android:background="@color/diver_bg" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_space_18"
                android:layout_marginTop="@dimen/view_space_12">

                <TextView
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@color/color_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全联保险">
                </TextView>
                <LinearLayout
                    android:id="@+id/quanlian_insurance_ll"
                    android:layout_marginTop="@dimen/view_space_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/baoxian_ic_two"
                        android:scaleType="fitXY"
                        android:src="@drawable/baoxian_ic_two"
                        android:layout_width="@dimen/view_space_100"
                        android:layout_height="@dimen/view_space_100">
                    </ImageView>

                    <LinearLayout
                        android:layout_marginBottom="@dimen/view_space_6"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_marginRight="@dimen/view_space_18"
                            android:layout_marginLeft="@dimen/view_space_8"
                            android:layout_marginTop="@dimen/view_space_8"
                            android:layout_toRightOf="@+id/baoxian_ic_two"
                            android:textSize="@dimen/text_size_16"
                            android:singleLine="true"
                            android:textColor="@color/color_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="平安生猪疫病强制扑杀补偿保险">
                        </TextView>
                        <TextView
                            android:layout_marginTop="@dimen/dp_4"
                            android:layout_marginRight="@dimen/view_space_18"
                            android:layout_marginLeft="@dimen/view_space_8"
                            android:layout_toRightOf="@+id/baoxian_ic_two"
                            android:textSize="@dimen/text_size_14"
                            android:textColor="@color/color_3"
                            android:layout_width="wrap_content"
                            android:singleLine="true"
                            android:layout_height="wrap_content"
                            android:text="生猪类型：育肥猪/能繁母猪/种公猪">
                        </TextView>
                        <TextView
                            android:layout_marginTop="@dimen/dp_4"
                            android:layout_marginRight="@dimen/view_space_18"
                            android:layout_marginLeft="@dimen/view_space_8"
                            android:layout_toRightOf="@+id/baoxian_ic_two"
                            android:textSize="@dimen/text_size_14"
                            android:textColor="@color/color_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="保障期限:能繁母猪,公猪为1年,生猪为6个月">
                        </TextView>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_weight="1"
                        android:visibility="invisible"
                        android:layout_marginBottom="@dimen/view_space_6"
                        android:layout_gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/view_space_30"
                        android:text="立即投保"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_14" />
                    <Button
                        android:layout_weight="1"
                        android:visibility="invisible"

                        android:layout_marginBottom="@dimen/view_space_6"
                        
                        android:layout_gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/view_space_30"
                        android:background="@drawable/insured_btn_bg"
                        android:text="立即投保"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_14" />

                    <Button
                        android:layout_weight="1"
                        android:id="@+id/quanlian_insurance_btn"
                        android:layout_marginBottom="@dimen/view_space_6"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_gravity="right"
                        android:layout_marginRight="@dimen/view_space_8"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/view_space_30"
                        android:background="@drawable/insured_btn_bg"
                        android:text="立即投保"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_14" />
                    <Button
                        android:layout_weight="1"
                        android:id="@+id/quanlian_detalis_btn"
                        android:layout_marginBottom="@dimen/view_space_6"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_marginRight="@dimen/view_space_18"
                        android:layout_height="@dimen/view_space_30"
                        android:background="@drawable/details_bg"
                        android:text="详情"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_14" />
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_size_0.5"
                android:layout_marginLeft="@dimen/view_space_18"
                android:layout_marginTop="@dimen/view_space_12"
                android:layout_marginRight="@dimen/view_space_18"
                android:background="@color/diver_bg" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>