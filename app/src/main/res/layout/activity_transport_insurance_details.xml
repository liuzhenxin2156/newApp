<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/toolbar_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_48">

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/view_space_4"
            android:background="?attr/selectableItemBackground"
            android:padding="@dimen/view_space_10"
            android:src="@drawable/back_iv" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="保险介绍"
            android:textColor="@color/color_3"
            android:textSize="@dimen/text_size_16" />
    </RelativeLayout>

    <View xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/toolbar_ll"
        android:background="@color/xml_bg" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/sun_insurance_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_space_18"
                android:layout_marginTop="@dimen/view_space_12"
                android:layout_marginRight="@dimen/view_space_18">

                <ImageView
                    android:id="@+id/baoxian_ic"
                    android:layout_width="@dimen/view_space_100"
                    android:layout_height="@dimen/view_space_100"
                    android:scaleType="fitXY"
                    android:src="@drawable/baoxian_ic"></ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/view_space_6"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/insurance_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/view_space_8"
                        android:layout_marginTop="@dimen/view_space_8"
                        android:layout_marginRight="@dimen/view_space_18"
                        android:layout_toRightOf="@+id/baoxian_ic"
                        android:text="宝讯定制"
                        android:textColor="@color/color_3"
                        android:textSize="@dimen/text_size_16"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/view_space_8"
                        android:layout_marginTop="@dimen/view_space_4"
                        android:layout_toRightOf="@+id/baoxian_ic"
                        android:text="生猪类型：生猪/仔猪"
                        android:textColor="@color/color_3"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/view_space_8"
                        android:layout_marginTop="@dimen/view_space_4"
                        android:layout_toRightOf="@+id/baoxian_ic"
                        android:text="保障期限：同检疫证有效期"
                        android:textColor="@color/color_3"
                        android:textSize="@dimen/text_size_16"></TextView>
                </LinearLayout>

            </LinearLayout>

            <View xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="@dimen/view_space_12"
                android:background="@color/xml_bg" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_space_18"
                android:layout_marginTop="@dimen/view_space_8"
                android:layout_marginRight="@dimen/view_space_18"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="特别约定："
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/view_space_16"></TextView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_size_0.5"
                    android:layout_marginTop="@dimen/view_space_8"
                    android:background="@color/diver_bg" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_space_8"
                    android:lineSpacingExtra="0.8dp"
                    android:textColor="@color/color_3"
                    android:textSize="@dimen/text_size_14"
                    android:text="@string/transport_details_special_tips"></TextView>
            </LinearLayout>




            <View xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="@dimen/view_space_12"
                android:background="@color/xml_bg" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_space_18"
                android:layout_marginTop="@dimen/view_space_8"
                android:layout_marginRight="@dimen/view_space_18"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="保险期间："
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/view_space_16"></TextView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_size_0.5"
                    android:layout_marginTop="@dimen/view_space_8"
                    android:background="@color/diver_bg" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_space_8"
                    android:lineSpacingExtra="0.8dp"
                    android:textColor="@color/color_3"
                    android:textSize="@dimen/text_size_14"
                    android:text="@string/transport_within_insurance"></TextView>
            </LinearLayout>

            <View xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="@dimen/view_space_12"
                android:background="@color/xml_bg" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_space_18"
                android:layout_marginTop="@dimen/view_space_8"
                android:layout_marginRight="@dimen/view_space_18"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="客服电话："
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/view_space_16"></TextView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_size_0.5"
                    android:layout_marginTop="@dimen/view_space_8"
                    android:background="@color/diver_bg" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_space_8"
                    android:lineSpacingExtra="0.8dp"
                    android:textColor="@color/color_3"
                    android:textSize="@dimen/text_size_14"
                    android:text="400-900-1234"></TextView>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_space_16"
                android:lineSpacingExtra="0.8dp"
                android:textColor="@color/color_3"
                android:textSize="@dimen/text_size_14"
                android:text="本产品方案由中路财产保险股份有限公司承保"></TextView>
            <Button
                android:id="@+id/insured_now_btn"
                android:layout_alignParentBottom="true"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height_44"
                android:layout_marginBottom="@dimen/view_space_12"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/view_space_40"
                android:background="@drawable/insured_btn_bg"
                android:text="立即投保"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_space_20">

            </LinearLayout>
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

   

</RelativeLayout>