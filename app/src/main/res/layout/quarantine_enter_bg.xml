<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@drawable/shape_border_white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:padding="@dimen/view_space_18"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/view_space_12"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_space_10"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/view_space_22"
            android:text="检疫证号"
            android:textColor="@color/color_6"
            android:textSize="@dimen/text_size_14"></TextView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
              android:layout_weight="1"
                android:id="@+id/quarantine_num_et"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/view_height_44"
                android:cursorVisible="true"
                android:inputType="number"
                android:textCursorDrawable="@null"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/view_space_12"
                android:layout_marginRight="@dimen/view_space_4"
                android:background="@drawable/edittext_bg"
                android:gravity="left|center"
                android:maxLines="1"
                android:paddingLeft="@dimen/view_space_8"
                android:singleLine="true"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/color_6"
                android:textSize="@dimen/text_size_16" />

            <Button
                android:id="@+id/search_btn"
                android:layout_marginTop="@dimen/view_space_16"

                android:background="@drawable/search_bg"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/colorWhite"
                android:text="搜索"
                android:layout_width="@dimen/view_space_60"
                android:layout_height="@dimen/view_space_38">

            </Button>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>