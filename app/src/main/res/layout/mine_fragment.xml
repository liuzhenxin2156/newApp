<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/home_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_height_44"></RelativeLayout>

        <ImageView
            android:id="@+id/head_iv"
            android:layout_width="@dimen/view_space_84"
            android:layout_height="@dimen/view_space_84"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/view_space_24"
            android:scaleType="fitXY"
            android:src="@drawable/ic_user_face_default" />


        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/head_iv"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/view_space_12"
            android:layout_marginBottom="@dimen/view_space_24"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="您的ID"
            android:textColor="@color/black"
            android:textSize="@dimen/F2"
            android:textStyle="bold" />


    </LinearLayout>
    <View
        android:id="@+id/view1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_space_10"
        android:background="@color/contact_divider" />

    <LinearLayout
        android:id="@+id/check_suggestions"
        android:layout_width="0dp"
        android:layout_height="@dimen/view_space_52"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center_vertical"
        android:padding="@dimen/view_space_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view1">

        <ImageView
            android:layout_marginLeft="@dimen/text_size_16"
            android:id="@+id/home_stting_icon"
            android:layout_width="@dimen/view_space_28"
            android:layout_height="@dimen/view_space_28"

            android:src="@drawable/ic_settings" />

        <TextView
            android:id="@+id/home_stting_tex"
            android:layout_width="0.0dp"
            android:layout_marginLeft="@dimen/view_space_12"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:text="@string/setting"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_18" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/text_size_16"
            android:src="@drawable/ic_home_arrow" />
    </LinearLayout>

    <View
        android:id="@+id/view_1"
        android:layout_width="0dp"
        android:layout_height="@dimen/divider_size_0.5"
        android:layout_marginLeft="@dimen/view_space_18"
        android:layout_marginRight="@dimen/view_space_18"
        android:background="@color/diver_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/check_suggestions" />


    <LinearLayout
        android:id="@+id/bulletin_board_ll"
        android:layout_width="0dp"
        android:layout_height="@dimen/view_space_52"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center_vertical"
        android:padding="@dimen/view_space_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_1">

        <ImageView
            android:id="@+id/home_feedback_icon"
            android:layout_width="@dimen/view_space_28"
            android:layout_height="@dimen/view_space_28"
           android:layout_marginLeft="@dimen/text_size_16"
            android:src="@drawable/ic_feedback" />

        <TextView
            android:id="@+id/home_feedback_tex"
            android:layout_width="0.0dp"
            android:layout_marginLeft="@dimen/view_space_12"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:text="公告栏"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_18" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/text_size_16"
            android:src="@drawable/ic_home_arrow" />
    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="@dimen/divider_size_0.5"
        android:layout_marginLeft="@dimen/view_space_18"
        android:layout_marginRight="@dimen/view_space_18"
        android:background="@color/diver_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bulletin_board_ll" />
    <LinearLayout
        android:id="@+id/order_historical"
        android:layout_width="0dp"
        android:layout_height="@dimen/view_space_52"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center_vertical"
        android:padding="@dimen/view_space_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view">

        <ImageView
            android:layout_width="@dimen/view_space_28"
            android:layout_height="@dimen/view_space_28"
            android:layout_marginLeft="@dimen/text_size_16"
            android:src="@drawable/order_histroy" />

        <TextView

            android:layout_width="0.0dp"
            android:layout_marginLeft="@dimen/view_space_12"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:text="历史订单"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_18" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/text_size_16"
            android:src="@drawable/ic_home_arrow" />
    </LinearLayout>

    <View
        android:id="@+id/view_order"
        android:layout_width="0dp"
        android:layout_height="@dimen/divider_size_0.5"
        android:layout_marginLeft="@dimen/view_space_18"
        android:layout_marginRight="@dimen/view_space_18"
        android:background="@color/diver_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_historical" />

    <LinearLayout
        android:id="@+id/vip_recharge_ll"
        android:layout_width="0dp"
        android:layout_height="@dimen/view_space_52"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center_vertical"
        android:padding="@dimen/view_space_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_order">

        <ImageView
            android:layout_width="@dimen/view_space_28"
            android:layout_height="@dimen/view_space_28"
            android:layout_marginLeft="@dimen/text_size_16"
            android:src="@drawable/vip_recharge_iv" />

        <TextView

            android:layout_width="0.0dp"
            android:layout_marginLeft="@dimen/view_space_12"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:text="会员充值"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_18" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/text_size_16"
            android:src="@drawable/ic_home_arrow" />
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/divider_size_0.5"
        android:layout_marginLeft="@dimen/view_space_18"
        android:layout_marginRight="@dimen/view_space_18"
        android:background="@color/diver_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vip_recharge_ll" />


</androidx.constraintlayout.widget.ConstraintLayout>