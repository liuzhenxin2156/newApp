<?xml version="1.0" encoding="utf-8"?>
    <selector xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- 按压 -->
        <item android:state_pressed="true">
            <shape android:shape="rectangle">
                <solid android:color="#1C71CC"/>
                <corners android:radius="@dimen/view_space_8"/>
                <!--<stroke android:color="#50fe6972"-->
                <!--android:width="@dimen/common_btn_radius"/>-->
            </shape>
        </item>
        <!--不可用-->
        <item android:state_enabled="false">
            <shape android:shape="rectangle">
                <solid android:color="#0069D9"/>
                <corners android:radius="@dimen/view_space_8"/>
                <!--<stroke android:color="#50fe6972"-->
                <!--android:width="@dimen/common_btn_radius"/>-->
            </shape>
        </item>
    <!-- 默认 -->
    <item android:state_pressed="false">
        <shape >
            <!-- 背景色 -->
            <solid android:color="#00000000"/>
            <!-- 边框色 -->
            <stroke android:width="1dp" android:color="#3B8BE1" />
            <corners android:radius="@dimen/view_space_6"/>
        </shape>
    </item>
</selector>